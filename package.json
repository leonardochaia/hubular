{
  "name": "hubot-framework",
  "version": "0.0.1",
  "private": true,
  "author": "Leonardo Chaia <lchaia@astonishinglab.com>",
  "description": "A framework for writing Hubot scripts. Inspired on Angular.",
  "scripts": {
    "prebuild": "npm run verify",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js -i dist/index.js > dist/hubot-framework.bundle.js",
    "build:test": "rimraf dist-test && tsc -p tsconfig-test.json",
    "test": "npm run build:test && jasmine",
    "lint": "tslint -p tsconfig.json",
    "verify": "yarn lint"
  },
  "dependencies": {
    "hubot": "^3.1.1",
    "injection-js": "^2.2.1"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.9.2",
    "jasmine": "^3.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": "0.10.x"
  }
}
