{
  "name": "hubot-framework",
  "version": "0.0.1",
  "private": true,
  "author": "Leonardo Chaia <lchaia@astonishinglab.com>",
  "description": "A framework for writing Hubot scripts. Inspired on Angular.",
  "scripts": {
    "prebuild": "yarn lint && yarn test",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js -i dist/index.js > dist/hubot-framework.bundle.js",
    "build:test": "rimraf spec/dist && tsc -p spec/tsconfig.json",
    "test": "yarn build:test && jasmine",
    "lint": "tslint -p tsconfig.json"
  },
  "dependencies": {
    "@types/hubot": "^2.19.2",
    "hubot": "^3.1.1",
    "injection-js": "^2.2.1"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.9.2",
    "jasmine": "^3.2.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "reflect-metadata": "^0.1.12"
  },
  "engines": {
    "node": ">=8"
  }
}
